    </kbase>
    
    <kbase name="confKBase" includes="globalKBase" packages="rules.conf" default="false"> 
        
    </kbase>
    
    <kbase name="gameKBase" includes="globalKBase" packages="rules.game" default="false"> 
        
    </kbase>
    
    <kbase name="engineKBase" includes="globalKBase" packages="rules.engine" default="false"> 
        
    </kbase>
    
    <kbase name="fullKBase" includes="globalKBase" packages="rules.game, rules.engine" default="true"> 
        
    </kbase>
</kmodule>
